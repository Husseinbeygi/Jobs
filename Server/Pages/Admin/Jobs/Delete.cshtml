@page
@model Server.Pages.Admin.Jobs.DeleteModel
@{
	var pageTitle =
	$"{Resources.ButtonCaptions.Delete} {Resources.DataDictionary.Job}";

	ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;

	Layout = "Layouts/Admin/Rtl/_Layout";
}

<section-form>
	<fieldset disabled>
		<section-form-header>
			@(pageTitle)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<section-form-field>
			<label asp-for="ViewModel.Name"></label>
			<input asp-for="ViewModel.Name" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Description"></label>
			<input asp-for="ViewModel.Description" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Address"></label>
			<input asp-for="ViewModel.Address" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.PhoneNumber1"></label>
			<input asp-for="ViewModel.PhoneNumber1" />
			<span asp-validation-for="ViewModel.PhoneNumber1"></span>
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.CellPhoneNumber1"></label>
			<input asp-for="ViewModel.CellPhoneNumber1" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.CategoryId"></label>
			<input asp-for="@(Model.category.Data.Name)" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.OpeningTime"></label>
			<div class="row">
				<div class="col-6">
					<label>@(Resources.DataDictionary.Hour)</label>
					<input class="form-control" asp-for="ViewModel.OpeningTime.Hours" />
				</div>
				<div class="col-6">
					<label>@(Resources.DataDictionary.Minutes)</label>
					<input class="form-control" asp-for="ViewModel.OpeningTime.Minutes" />
				</div>
			</div>
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.ClosingTime"></label>
			<div class="row">
				<div class="col-6">
					<label>@(Resources.DataDictionary.Hour)</label>
					<input class="form-control" asp-for="ViewModel.ClosingTime.Hours" />
				</div>
				<div class="col-6">
					<label>@(Resources.DataDictionary.Minutes)</label>
					<input class="form-control" asp-for="ViewModel.ClosingTime.Minutes" />
				</div>
			</div>
		</section-form-field>

		<section-form-check>
			<input asp-for="ViewModel.IsActive" />
			<label asp-for="ViewModel.IsActive"></label>
		</section-form-check>

		<section-form-check>
			<input asp-for="ViewModel.IsVerified" />
			<label asp-for="ViewModel.IsVerified"></label>
		</section-form-check>

		<section-form-check>
			<input asp-for="ViewModel.IsUndeletable" />
			<label asp-for="ViewModel.IsUndeletable"></label>
		</section-form-check>
	</fieldset>

	<form method="post">
		<section-form-buttons>
			<input type="hidden" asp-for="ViewModel.Id" />

			<button-delete />
		</section-form-buttons>
	</form>

	<section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
		<a asp-page="Details" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForDetails())
		</a>
		<a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForUpdate())
		</a>
	</section-form-footer>
</section-form>